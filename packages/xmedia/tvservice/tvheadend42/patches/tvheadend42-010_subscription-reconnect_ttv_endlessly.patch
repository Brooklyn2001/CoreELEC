diff -Naurp tvheadend42/src/subscriptions.c tvheadend42-patch/src/subscriptions.c
--- tvheadend42/src/subscriptions.c	2018-12-05 17:30:11.000000000 +0200
+++ tvheadend42-patch/src/subscriptions.c	2018-12-06 10:09:28.000000000 +0200
@@ -374,7 +374,7 @@ subscription_reschedule(void)
       /* Already got a service */
 
       if(subgetstate(s) != SUBSCRIPTION_BAD_SERVICE)
-	continue; /* And it is not bad, so we're happy */
+	    continue; /* And it is not bad, so we're happy */
 
       tvhwarn(LS_SUBSCRIPTION, "%04X: service instance is bad, reason: %s",
               shortid(s), streaming_code2txt(s->ths_testing_error));
@@ -394,6 +394,26 @@ subscription_reschedule(void)
         s->ths_service = si->si_s;
 
       s->ths_last_error = 0;
+
+      /* Reconnect IPTV */
+      if(s->ths_testing_error == SM_CODE_NO_INPUT) {
