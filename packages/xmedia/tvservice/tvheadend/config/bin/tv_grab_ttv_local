XMLTV_DIR="/storage/ttv-xmltv"

################################### --MAIN-- #####################################

if [ $# -lt 1 ]; then
  . /etc/profile

  [ -x /usr/bin/ttv-xmltv ] && /usr/bin/ttv-xmltv > /dev/null 2>&1
  XMLTV_NAME=`ls /storage/ttv-xmltv 2>/dev/null`
  [ -z "$XMLTV_NAME" ] && exit 1
  zcat "$XMLTV_DIR/$XMLTV_NAME"
  exit 0
fi

dflag=
vflag=
cflag=

for a in "$@"
do
  [ "$a" = "-d" -o "$a" = "--description"  ] && dflag=1
  [ "$a" = "-v" -o "$a" = "--version"      ] && vflag=1
  [ "$a" = "-c" -o "$a" = "--capabilities" ] && cflag=1
done

if [ -n "$dflag" ]
then
  echo "TTV-API local grabber"
fi

if [ -n "$vflag" ]
then
  echo "1.0"
fi

if [ -n "$cflag" ]
then
  echo "baseline"
fi
