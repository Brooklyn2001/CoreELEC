CH_NAME="$@"
CH_FILE="/storage/ttv-m3u/TVH-TTV.list"
URL=`grep -m 1 "^$CH_NAME #" $CH_FILE | awk -F\\# '{print $2}' | sed 's/^[ \t]*//; s/[ \t]*$//'`
LOG_LEVEL="quiet"
OPT_FFMPEG="-c copy -map 0"

CONFIG_FILE="/storage/.config/acestream/stream-tvh.conf"
[ -f "$CONFIG_FILE" ] && . $CONFIG_FILE

/usr/bin/ffmpeg -v $LOG_LEVEL -i "$URL" $OPT_FFMPEG -f mpegts pipe:1
